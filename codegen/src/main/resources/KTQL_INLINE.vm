class KTQLImpl : KTQL {
    private val selections = hashSetOf<KTQLOperation<*>>()
    override val selected: Set<KTQLOperation<*>>
            get() = selections.toSet()
    #foreach ( $query in $schema.queries)

    fun ${query.name}Query(
      #foreach ($input in $query.inputs)
        #if ($input.Primitive)
      ${input.variableName}: ${input.ktTypeName}#if(!$input.NonNull)? = null#end,
        #else
      ${input.variableName}: ${apolloPrefix}.integration.type.${input.ktTypeName}#if(!$input.NonNull)? = null#end,
        #end
      #end
      init: ${query.resultantType.value.name}.() -> Unit
    ) {
        val resultantObj = ${query.resultantType.value.name}()
        resultantObj.init()
        val operation = ${query.name}Query(resultantObj)
        #foreach ($input in $query.inputs)
        operation.inputs["$input.variableName"] = $input.variableName
        #end
        selections.add(operation)
    }
    #end
}

fun ktql(init: KTQLImpl.() -> Unit): KTQL {
    val ktql = KTQLImpl()
    ktql.init()
    return ktql
}

#foreach ( $query in $schema.queries)
class ${query.name}Query(
    resultantObj: ${query.resultantType.value.name}
): KTQLOperation<${query.resultantType.value.name}>() {
    override val gqlRepresentation = "$query.name"
    init {
        selections.addAll(resultantObj.selected)
    }
}
#end

#foreach ($type in $schema.types)
  #if ($type.fields.size == 0)
class ${type.name} : TerminalKTQLType<${type.name}>
  #else
class ${type.name} : ObjectKTQLType<${type.name}> {
    private val selections: HashSet<Field<${type.name}, *>> = hashSetOf()
    override val selected: Set<Field<${type.name}, *>>
        get() = selections.toSet()
    #foreach ($field in $type.fields)
        #if ($field.Primitive)
    fun ${field.fieldName}() {
        selections.add(SimpleField("$field.fieldName"))
    }
        #else
    fun ${field.fieldName}(init: ${field.fieldType.value.name}.() -> Unit) {
        val obj = ${field.fieldType.value.name}()
        obj.init()
        selections.add(ComplexField("$field.fieldName", obj))
    }
        #end
    #end
    override fun all() {
    #foreach ($field in $type.fields)
        #if ( $field.Primitive)
        ${field.fieldName}()
        #else
        ${field.fieldName} {
            all()
        }
        #end
    #end
    }
}
